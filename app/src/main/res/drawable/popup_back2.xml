<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <!-- گرادینت -->
            <gradient
                android:startColor="#133559"
                android:endColor="#0E193B"
                android:angle="270" />

            <!-- لبه‌های گرد -->
            <corners android:radius="39dp" />
        </shape>
    </item>

    <!-- لایه‌ی اول: شکل مربعی با نوار مشکی -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- پس‌زمینه شفاف -->
            <stroke
                android:color="#A8A7A7" android:width="8dp" />
            <corners android:radius="35dp" /> <!-- مقدار radius را تغییر دهید (مطابق با لایه‌ی اول) --><!-- رنگ مشکی -->
            <!-- عرض نوار مشکی -->
        </shape>
    </item>

    <!-- لایه‌ی دوم: تصویر اصلی -->


</layer-list>
