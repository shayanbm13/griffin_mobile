<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- وقتی وضعیت فعال است -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="#044F66"
                android:endColor="#460c66"
                android:type="linear" />
            <corners
                android:bottomRightRadius="10dp"
                android:bottomLeftRadius="10dp"
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp" />
        </shape>
    </item>
    <!-- وضعیت عادی -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#274157" /> <!-- رنگ پس‌زمینه یا هر شی‌ئی دیگر که می‌خواهید تغییر کند -->
            <corners
                android:bottomRightRadius="10dp"
                android:bottomLeftRadius="10dp"
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp" />
        </shape>
    </item>
</selector>