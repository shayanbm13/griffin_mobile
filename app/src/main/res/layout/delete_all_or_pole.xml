<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_270mdp"
    android:layout_height="@dimen/_110mdp"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_gravity="center"
    android:background="@drawable/popup_back2">

    <TextView
        android:id="@+id/text_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete all device poles or one pole of device"
        android:textColor="@color/white"
        android:textSize="@dimen/_13font_mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/yes_delete"
        android:layout_width="@dimen/_55mdp"
        android:layout_height="@dimen/_30mdp"
        android:layout_margin="10dp"
        android:background="@drawable/back_btn_color"
        android:text="Delete all"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_9font_mdp"
        app:layout_constraintBottom_toBottomOf="@+id/cancel_delete"
        app:layout_constraintEnd_toStartOf="@+id/cancel_delete"
        app:layout_constraintTop_toTopOf="@+id/cancel_delete" />

    <Button
        android:id="@+id/cancel_delete"
        android:layout_width="@dimen/_55mdp"
        android:layout_height="@dimen/_30mdp"
        android:layout_margin="10dp"
        android:background="@drawable/back_btn_color"
        android:text="Detele pole"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_9font_mdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/text_msg"
        app:layout_constraintTop_toBottomOf="@+id/text_msg" />


</androidx.constraintlayout.widget.ConstraintLayout>
