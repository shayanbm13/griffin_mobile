<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout22"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constrainedHeight="true"
    app:layout_constrainedWidth="true"
    app:layout_constraintDimensionRatio="0:3">

    <ImageView
        android:id="@+id/imageSong"
        android:layout_width="@dimen/_30mdp"
        android:layout_height="@dimen/_30mdp"
        android:layout_marginStart="@dimen/_1mdp"
        android:adjustViewBounds="true"

        android:scaleType="fitCenter"


        android:src="@drawable/music_image"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/textView57"
        app:layout_constraintHeight_percent="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2"
        tools:layout_conversion_absoluteHeight="70dp"
        tools:layout_conversion_absoluteWidth="70dp" />


    <TextView
        android:id="@+id/textTitle"
        android:layout_width="@dimen/_80mdp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit ="marquee_forever"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollHorizontally="true"
        android:layout_marginStart="@dimen/_3mdp"
        android:gravity="left"
        android:text="shadmehr"
        android:textColor="@color/white"
        android:textSize="@dimen/_11font_mdp"
        app:layout_constraintBottom_toTopOf="@+id/textArtist"
        app:layout_constraintEnd_toStartOf="@+id/wave_gif"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageSong"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.761"
        tools:layout_conversion_absoluteHeight="27dp"
        tools:layout_conversion_absoluteWidth="522dp" />

    <TextView
        android:id="@+id/textArtist"
        android:layout_width="@dimen/_80mdp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_marginBottom="12dp"
        android:gravity="left"
        android:text="shadmehr"
        android:textColor="@color/white"
        android:textSize="@dimen/_9font_mdp"
        app:layout_constraintBottom_toTopOf="@+id/textView57"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintStart_toStartOf="@+id/textTitle"
        app:layout_constraintTop_toBottomOf="@+id/textTitle"
        tools:layout_conversion_absoluteHeight="22dp"
        tools:layout_conversion_absoluteWidth="522dp" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/wave_gif"
        android:layout_width="@dimen/_15mdp"
        android:layout_height="@dimen/_15mdp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/music_wave"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/add_to_scenario_menu"
        app:layout_constraintEnd_toStartOf="@+id/add_to_scenario_menu"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintTop_toTopOf="@+id/add_to_scenario_menu"
        app:layout_constraintWidth_percent="0.07"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/add_to_scenario_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:background="@drawable/threepoint_pupapmenu"
        app:layout_constraintBottom_toTopOf="@+id/textView57"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.08"
        tools:layout_conversion_absoluteHeight="27dp"
        tools:layout_conversion_absoluteWidth="27dp" />


    <TextView
        android:id="@+id/textView57"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="----------------------------------------------------"
        android:textColor="@color/white"
        app:layout_constrainedHeight="true"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_conversion_absoluteHeight="19dp"
        tools:layout_conversion_absoluteWidth="634dp">


    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>