<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".fragments.dashboard_exit_enter_scenario">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_7mdp"
        android:layout_marginTop="@dimen/_5mdp"
        android:text="Choose your Security Mode"
        android:textColor="@color/white"

        android:textSize="@dimen/_15font_mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/arm_button"
        android:layout_width="@dimen/_70mdp"
        android:layout_height="@dimen/_70mdp"

        android:background="@drawable/arm_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/disarm_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/disarm_button"
        android:layout_width="@dimen/_70mdp"
        android:layout_height="@dimen/_70mdp"
        android:background="@drawable/disarm_icon"

        app:layout_constraintBottom_toBottomOf="@+id/arm_button"
        app:layout_constraintEnd_toStartOf="@+id/sleep_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/arm_button"
        app:layout_constraintTop_toTopOf="@+id/arm_button"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/sleep_button"
        android:layout_width="@dimen/_70mdp"
        android:layout_height="@dimen/_70mdp"
        android:background="@drawable/sleep_icon"

        app:layout_constraintBottom_toBottomOf="@+id/arm_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/disarm_button"
        app:layout_constraintTop_toTopOf="@+id/arm_button"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>