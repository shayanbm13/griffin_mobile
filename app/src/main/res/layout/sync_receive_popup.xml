<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="@dimen/_250mdp"
    android:layout_height="@dimen/_380mdp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/popupback">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_size"
            android:ellipsize="none"
            android:gravity="center"
            android:text="Current Database Will \n Be Cleared , Proceed?"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_font_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.33"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <Button
            android:id="@+id/cance_receive"
            android:layout_width="@dimen/_65mdp"
            android:layout_height="@dimen/_30mdp"
            android:layout_marginTop="@dimen/space_size"
            android:background="@drawable/back_btn_color"
            android:scrollbarSize="@dimen/_8font_mdp"


            android:text="Cancel"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/small_font_size"
            app:layout_constraintEnd_toStartOf="@+id/ok_receive"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/ok_receive"
            android:layout_width="@dimen/_65mdp"
            android:layout_height="@dimen/_30mdp"
            android:layout_marginStart="48dp"
            android:background="@drawable/back_btn_color"
            android:text="Ok"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/small_font_size"
            app:layout_constraintBottom_toBottomOf="@+id/cance_receive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cance_receive"
            app:layout_constraintTop_toTopOf="@+id/cance_receive"
            app:layout_constraintWidth_percent="0.25" />

        <TextView
            android:id="@+id/connect_status"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30mdp"


            android:layout_marginTop="@dimen/space_size"

            android:background="@drawable/back_btn_color"
            android:gravity="center"
            android:text="Disconnected"
            android:textColor="@color/white"
            android:textSize="@dimen/small_font_size"
            app:layout_constraintEnd_toEndOf="@+id/ok_receive"
            app:layout_constraintHeight_percent="0.23"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="@+id/cance_receive"
            app:layout_constraintTop_toBottomOf="@+id/cance_receive"
            app:layout_constraintWidth_percent="0.4" />

        <TextView

            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_size"
            android:layout_marginBottom="@dimen/_5mdp"
            android:gravity="center"
            android:text="Sender IP"
            android:textAlignment="center"

            android:textColor="@color/white"
            android:textSize="@dimen/normal_font_size"
            app:layout_constraintBottom_toTopOf="@+id/sender_ip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/connect_status"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintWidth_percent="0.5"
            tools:layout_conversion_absoluteHeight="221dp"
            tools:layout_conversion_absoluteWidth="1dp" />

        <TextView
            android:id="@+id/sender_ip"

            android:layout_width="0dp"
            android:layout_height="@dimen/_30mdp"
            android:background="@drawable/back_btn_color"

            android:clickable="false"

            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"

            android:textAlignment="center"


            android:textColor="@color/white"


            android:textSize="@dimen/normal_font_size"
            app:layout_constraintBottom_toTopOf="@+id/textView11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintWidth_percent="0.8"
            tools:layout_conversion_absoluteHeight="28dp"
            tools:layout_conversion_absoluteWidth="1dp" />

        <TextView

            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/_5mdp"
            android:gravity="center"
            android:text="Receiving Steps"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_font_size"
            app:layout_constraintBottom_toTopOf="@+id/receive_steps"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sender_ip"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintWidth_percent="0.5"
            tools:layout_conversion_absoluteHeight="365dp"
            tools:layout_conversion_absoluteWidth="1dp" />

        <TextView
            android:id="@+id/receive_steps"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30mdp"

            android:layout_marginTop="-4dp"
            android:background="@drawable/back_btn_color"


            android:ems="10"
            android:gravity="center"


            android:inputType="textPersonName"


            android:textAlignment="center"
            android:textColor="@color/white"

            android:textSize="@dimen/normal_font_size"


            app:layout_constraintBottom_toTopOf="@+id/textView12"
            app:layout_constraintEnd_toEndOf="@+id/sender_ip"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/sender_ip"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            app:layout_constraintVertical_bias="0.5"
            tools:layout_conversion_absoluteHeight="28dp"
            tools:layout_conversion_absoluteWidth="1dp" />

        <TextView

            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/_5mdp"
            android:gravity="center"
            android:text="Received"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_font_size"
            app:layout_constraintBottom_toTopOf="@+id/received_status"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/receive_steps"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintWidth_percent="0.5"
            tools:layout_conversion_absoluteHeight="197dp"
            tools:layout_conversion_absoluteWidth="1dp" />

        <TextView
            android:id="@+id/received_status"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30mdp"

            android:layout_marginTop="-4dp"
            android:layout_marginBottom="@dimen/space_size"
            android:background="@drawable/back_btn_color"
            android:ems="10"

            android:gravity="center"
            android:inputType="textPersonName"
            android:textAlignment="center"

            android:textColor="@color/white"


            android:textSize="@dimen/normal_font_size"


            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/receive_steps"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintStart_toStartOf="@+id/receive_steps"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            app:layout_constraintVertical_bias="0.5"
            tools:layout_conversion_absoluteHeight="19dp"
            tools:layout_conversion_absoluteWidth="1dp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/_20mdp"
            android:layout_marginTop="@dimen/_20mdp"
            android:textSize="@dimen/big_font_size"
            android:text="Receive"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>